grammar bilbo;

header
    : Visibility? 'static' type nimi '(' type trree ')' '{' body '}'
    ;

body
    :    (line  ';')*
    ;

line
    :   head '~>' Java
    ;

Java
    :   '<java>'
    ;

head
    :   type '(' args? ')'
    |   Bottom
    ;

args
    :   arg (',' arg)*
    ;

arg
    :   var
    |   match
    ;

var
    :   NimiTest
    ;

match
    :   Number
    |   String
    ;

nimi
    :   NimiTest
    ;


type
    :   TypeName
    ;

trree
    :   NimiTest
    ;

Visibility
    : ('public' | 'private' | 'protected')
    ;

trree
    :   Name
    ;

TypeName
    :   [A-Z][a-z0-9_]*
    ;

